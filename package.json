{
    "name": "online-auction-system",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "electron-dev": "concurrently \"npm run start --prefix client\" \"npm run start --prefix server\" \"wait-on http://localhost:3000 && electron .\"",
        "electron-pack": "npm run build --prefix client && electron-builder"
    },
    "build": {
        "appId": "com.auction.system",
        "productName": "Online Auction System",
        "files": [
            "main.js",
            "client/build/**/*"
        ],
        "win": {
            "target": "nsis"
        },
        "directories": {
            "output": "dist"
        }
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "concurrently": "^8.2.2",
        "wait-on": "^7.2.0"
    }
}